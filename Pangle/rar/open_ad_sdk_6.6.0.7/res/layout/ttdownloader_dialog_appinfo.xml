<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@drawable/ttdownloader_bg_appinfo_dialog"
    android:gravity="center_horizontal">

    <com.ss.android.downloadlib.guide.install.ClipImageView
        android:id="@+id/iv_app_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="32dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/tv_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textColor="#161823"
        android:layout_marginTop="8dp"
        android:textStyle="bold"
        tools:text="部落战争：皇室冲突" />

    <TextView
        android:id="@+id/tv_app_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:textColor="#4D161823"
        android:layout_marginTop="8dp"
        tools:text="版本号：2.0.1" />

    <TextView
        android:id="@+id/tv_app_developer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:textColor="#4D161823"
        android:layout_marginTop="4dp"
        tools:text="开发者：广州坚和网络科技有限公司" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="14dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:gravity="center">
        <TextView
            android:id="@+id/tv_app_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:textColor="#4E90FF"
            android:text="权限详情" />
        <View
            android:layout_width="0.5dp"
            android:layout_height="9dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:background="#D8D8D8"/>
        <TextView
            android:id="@+id/tv_app_privacy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:textColor="#4E90FF"
            android:text="隐私政策" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_download"
        android:layout_width="276dp"
        android:layout_height="36dp"
        android:orientation="horizontal"
        android:background="@drawable/ttdownloader_bg_appinfo_btn"
        android:layout_marginTop="16dp"
        android:gravity="center">
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ttdownloader_icon_download"
            android:layout_marginRight="4dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="14dp"
            android:text="立即下载"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_give_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:layout_marginBottom="15dp"
        android:textColor="#4D161823"
        android:textSize="12dp"
        android:text="放弃下载"/>
</LinearLayout>